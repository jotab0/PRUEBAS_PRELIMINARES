void decodeYExecute(instruccion){
    switch(instruccion){
        case SET:
            break;
        case SUM:
            break;
        case SUB:
            break;
        case JNZ:
            break;
        case IO_GEN_SLEEP:
            break;
        default:
            // log info de error? (instuccion desconocida)
    }
}




